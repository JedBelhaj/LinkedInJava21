               <image>
                  <Image url="@../../../imgs/ic_more.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <Label fx:id="caption" maxWidth="1.7976931348623157E308" text="Caption" wrapText="true">
